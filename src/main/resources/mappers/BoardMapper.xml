<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
  <mapper namespace="org.dsu.dc.mapper.BoardMapper">
  	<select id="getList" resultType="org.dsu.dc.domain.BoardVO">
  		SELECT * FROM tbl_board
  	</select>
  	<sql id="criteria">
  		<trim prefix="(" suffix=") AND" prefixOverrides="OR">
  			<foreach item="type" collection="typeArr">
  				<trim prefix="OR">
  					<choose>
  						<when test="type == 'T'.toString()">
  							title LIKE CONCAT('%', #{keyword}, '%')
  						</when> 
  						<when test="type == 'C'.toString()">
  							content LIKE CONCAT('%', #{keyword}, '%')
  						</when> 
  						<when test="type == 'W'.toString()">
  							writer LIKE CONCAT('%', #{keyword}, '%')
  						</when> 
  					</choose>
  				</trim>
  			</foreach>	
  		</trim>
  	</sql>
  	
  	<select id="getListWithPaging" 
  			resultType="org.dsu.dc.domain.BoardVO">
  		<![CDATA[
  		SELECT bno, title, content, writer, regdate, updateDate
  		FROM tbl_board
  		WHERE 
  		]]>
  			<include refid="criteria"></include>
  		<![CDATA[
  		bno > 0
  		ORDER BY bno DESC, regdate DESC
  		LIMIT #{pageStart}, #{amount}
  		]]>
  	</select>
  	
  	<select id="getTotalCount" resultType="int">
  		<![CDATA[
  			SELECT count(*) FROM tbl_board WHERE bno > 0 ]]>
  	</select>
  	
  	<insert id="insert">
  		INSERT INTO tbl_board (title, content, writer)
  		VALUES (#{title}, #{content}, #{writer})
  	</insert>
  	
  	<insert id="insertSelectKey" parameterType="org.dsu.dc.domain.BoardVO">
  		INSERT INTO tbl_board (title, content, writer)
  		VALUES (#{title}, #{content}, #{writer})
  		<selectKey keyProperty="bno" resultType="long" order="AFTER">
  			SELECT MAX(bno) FROM tbl_board;
  		</selectKey>
  	</insert>
  	
  	<select id="read" resultType="org.dsu.dc.domain.BoardVO">
  		SELECT * FROM tbl_board
  		WHERE bno=#{bno}
  	</select>
  	
  	<delete id="delete">
  		DELETE FROM tbl_board
  		WHERE bno=#{bno}
  	</delete>
  	
  	<update id="update">
  		UPDATE tbl_board
  		SET title=#{title}, content=#{content}, writer=#{writer}, updateDate=now()
  		WHERE bno=#{bno}
  	</update>
  	
  </mapper>